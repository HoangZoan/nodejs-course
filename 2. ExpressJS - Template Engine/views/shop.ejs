<%- include('./includes/head.ejs') %>
    </head>

    <body>
        <%- include('./includes/navigation.ejs') %>

            <main>
                <h1>My Products</h1>
                <p>List of all the products</p>

                <% if(prods.length> 0) { %>
                    <div>
                        <% for (let product of prods) { %>
                            <article>
                                <h1>
                                    <%= product.title %>
                                </h1>
                                <button>Add to Cart</button>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Product Found</h1>
                        <% } %>
            </main>
            <%- include('./includes/end.ejs') %>